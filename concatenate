#include<stdio.h>
#include<stdlib.h>
struct node {
    int data;
    struct node * next;
};
typedef struct node * N;
N insert_rear(N ptr,int data){
    N p=(N)malloc(sizeof(struct node));
    p->data=data;
    p->next=NULL;
    if(ptr==NULL){
        return p;
    }
    N q= ptr;
    while(q->next!=NULL){
        q=q->next;

    }
    q->next=p;
    // q->data=data;
    // p->next=NULL;
    return ptr;

}
void display(N ptr){
    {N p=ptr;
   
    if(ptr==NULL){
        printf("list is empty\n");
    }
    else
    while(p!=NULL){
    printf("%d\t",p->data);
    p=p->next;
}
    }
   
}
N concat(N list1, N list2)
{
   
    N p=list1;
    if(list1==NULL && list2!=NULL)
    return list2;
    else if(list2==NULL && list1!=NULL)
    return list1;
    else if(list1==NULL && list2==NULL)
    {
        printf("Both the linked lists are empty to concatenate!\n");
        return NULL;
    }
    else
    {
       
        while(p->next!=NULL)
        {
            p=p->next;
        }
        printf("%d\n",p->data);
        p->next=list2;
        return list1;
}
}
int main(){
    N list1= NULL;
    N list2=NULL;
    int a[5],b[5];
    for(int i=0;i<5;i++){
        printf("enter the data for first linked list\n");
        scanf("%d",&a[i]);
        list1 =insert_rear(list1,a[i]);
       
    }
    for(int i=0;i<5;i++){
        printf("enter the data for second linked list\n");
        scanf("%d",&b[i]);
        list2 =insert_rear(list2,b[i]);
       
    }
    display(list1);
    printf("\n");
    display(list2);
    printf("\n");
    head1=concat(list1,list2);
    printf("After Concatenating both the linked list\n");
    display(list1);

    

}
