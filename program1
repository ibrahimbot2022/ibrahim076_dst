#include <stdio.h>
#define STACK_SIZE 5
int St[5],top,item,top=-1;
 
void push()
{ if (top== STACK_SIZE-1)
     printf("stack overflow\n");
  else
  {
     top++;
     St[top]=item;
  }
}

int pop()
{  int del_item;
   if (top==-1)
      printf("stack under flow\n");
   else
   {
      del_item=St[top];
      top--;
      printf("the element deleted is %d \n",del_item);
      return del_item;
   }
}

void display()
{ int i;
  if (top==-1)
      printf("stack is empty\n");
  for(i=0;i<=top;i++)
      printf("%d \t",St[i]);
}
int main()
{
    int n,r ;
    while(1);
    {
        printf("enter the choice\n");
        scanf("%d",&n);
        switch(n)
        {
            case 1: printf("enter the choice");
                    scanf("%d",&r);
                    item=r;
                     push();
                     break;
            case 2: pop();
                     break;
            case 3: display();
                    break;
            default:exit(0);
                    break;
        }
    } 
}                                  
